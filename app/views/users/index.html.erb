<p style="color: green"><%= notice %></p>

<h1>Users</h1>

<div id="users">
  <%= link_to "New user", new_user_path, class: "btn btn-primary", data: { turbo_frame: "remote_modal" } %>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">E-mail</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr id="user_<%= user.id %>" scope="row">
          <%= render user %>
        </tr>
      <% end %>
    </tbody>
  </table>
  
</div>


