<%= form_with(model: flat) do |form| %>
  <div class="mb-3">
    <%= form.label :user_id, style: "display: block", class: "form-label" %>
    <%= form.select :user_id, User.all.collect { |u| [ u.name, u.id ] },{}, class: "form-control" %>
    <div style="color: red">
      <% if flat.errors.include?(:user) %>
          <% flat.errors.full_messages_for(:user).each do |error_message| %>
            <%= error_message %>.
          <% end %>
      <% end %>
    </div>
  </div>
  
  <div class="mb-3">
    <%= form.label :name, style: "display: block", class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
    <div style="color: red">
      <% if flat.errors.include?(:name) %>
          <% flat.errors.full_messages_for(:name).each do |error_message| %>
            <%= error_message %>.
          <% end %>
      <% end %>
    </div>
  </div>

  <div class="mb-3">
    <%= form.label :latitude, style: "display: block", class: "form-label" %>
    <%= form.text_field :latitude, class: "form-control" %>
    <div style="color: red">
      <% if flat.errors.include?(:latitude) %>
          <% flat.errors.full_messages_for(:latitude).each do |error_message| %>
            <%= error_message %>.
          <% end %>
      <% end %>
    </div>
  </div>
  <div class="mb-3">
    <%= form.label :longitude, style: "display: block", class: "form-label" %>
    <%= form.text_field :longitude, class: "form-control" %>
    <div style="color: red">
      <% if flat.errors.include?(:longitude) %>
          <% flat.errors.full_messages_for(:longitude).each do |error_message| %>
            <%= error_message %>.
          <% end %>
      <% end %>
    </div>
  </div>
  <div class="mb-3">
    <%= form.submit "Save", class: "btn btn-success btn-block" %>
  </div>
<% end %>
