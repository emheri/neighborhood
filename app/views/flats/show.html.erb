<%= render "remote_modal", title: "Flat detail" do %>
<div class="col-lg-8">
  <div class="card mb-4">
    <div class="card-body">
      <div class="row">
        <div class="col-sm-3">
          <p class="mb-0">Owner</p>
        </div>
        <div class="col-sm-9">
          <p class="text-muted mb-0"><%= @flat.user.name %></p>
        </div>
      </div>
      <hr>
      <div class="row">
        <div class="col-sm-3">
          <p class="mb-0">Name</p>
        </div>
        <div class="col-sm-9">
          <p class="text-muted mb-0"><%= @flat.name %></p>
        </div>
      </div>
      <hr>
      <div class="row">
        <div class="col-sm-3">
          <p class="mb-0">Latitude</p>
        </div>
        <div class="col-sm-9">
          <p class="text-muted mb-0"><%= @flat.latitude %></p>
        </div>
      </div>
      <hr>
      <div class="row">
        <div class="col-sm-3">
          <p class="mb-0">Longitude</p>
        </div>
        <div class="col-sm-9">
          <p class="text-muted mb-0"><%= @flat.longitude %></p>
        </div>
      </div>
      <hr>
      <div class="row">
        <div class="col-sm-3">
          <p class="mb-0">Neighborhods</p>
        </div>
        <div class="col-sm-9">
          <p class="text-muted mb-0"><%= @flat.neighborhoods.map(&:name).join(", ") %></p>
        </div>
      </div>
    </div>
  </div>
</div>

<% end %>